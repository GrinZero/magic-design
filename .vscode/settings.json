{
	"files.autoSave": "off",
	"files.exclude": {
		".vite-cache": true
	},
	"editor.codeActionsOnSave": {
		"source.fixAll": false,
		"source.fixAll.eslint": true, // this allows ESLint to auto fix on save
		"source.fixAll.stylelint": true,
		"source.organizeImports": false
	},
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.simpleDialog.enable": true,
	"editor.formatOnSave": true,
	"editor.formatOnPaste": false,
	"editor.autoClosingBrackets": "always",
	"eslint.options": {
		"extensions": [".js", ".jsx", ".ts", ".tsx", ".mdx"]
	},
	"editor.rulers": [120],
	"eslint.workingDirectories": [
		{
			"mode": "auto"
		},
		".eslintrc.js",
		".eslintignore"
	],
	"eslint.packageManager": "pnpm",
	"eslint.format.enable": true,
	"eslint.validate": ["javascript", "typescript", "javascriptreact", "typescriptreact"],
	"emmet.triggerExpansionOnTab": true,
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"typescript": "typescriptreact"
	},
	"emmet.syntaxProfiles": {
		"javascript": ["jsx", "html"]
	},
	"emmet.showExpandedAbbreviation": "always",
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		"package.json": "tsconfig.json, *.config.js, *.config.ts, .stackblitzrc, pnpm*, .npm*",
		"README.md": ".git*, .eslint*, .prettier*, .stylelint*, commitlint*, .editorconfig, .lintstagedrc"
	},
	"tailwindCSS.includeLanguages": {
		"javascript": "javascriptreact",
		"typescript": "typescriptreact",
		"css": "css",
		"mdx": "mdx"
	},
	"tailwindCSS.experimental.configFile": "tailwind.config.js",
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[mdx]": {
		"editor.defaultFormatter": "vscode.emmet"
	},
	"[scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"auto-close-tag.activationOnLanguage": [
		"xml",
		"php",
		"blade",
		"ejs",
		"jinja",
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"plaintext",
		"markdown",
		"vue",
		"liquid",
		"erb",
		"lang-cfml",
		"cfml",
		"HTML (EEx)",
		"HTML (Eex)",
		"plist",
		"mdx"
	],
	"auto-rename-tag.activationOnLanguage": [
		"xml",
		"php",
		"blade",
		"ejs",
		"jinja",
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"plaintext",
		"markdown",
		"vue",
		"liquid",
		"erb",
		"lang-cfml",
		"cfml",
		"HTML (EEx)",
		"HTML (Eex)",
		"plist",
		"mdx"
	],
	"stylelint.validate": ["css", "less", "postcss", "scss", "sass"]
}
